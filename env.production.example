# Production Environment Configuration for Render
NODE_ENV=production
PORT=10000

# Database Configuration (will be provided by Render PostgreSQL)
# DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD will be set by Render

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (update with your production email settings)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_app_password
EMAIL_FROM=noreply@eduai.com
EMAIL_FROM_RESET=info@raycraft.in
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true
EMAIL_TLS_REJECT_UNAUTHORIZED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
VERIFICATION_TOKEN_EXPIRES_IN=24h
RESET_TOKEN_EXPIRES_IN=1h

# CORS Configuration (update with your Vercel frontend URL)
ALLOWED_ORIGINS=https://your-frontend-app.vercel.app,https://your-custom-domain.com

# Logging
LOG_LEVEL=info

# WhatsApp Business API Configuration (optional)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# AI Call Service Configuration (optional)
AI_CALL_API_KEY=your_ai_call_api_key
AI_CALL_SERVICE_URL=https://api.yourai-service.com
AI_CALL_VOICE_ID=21m00Tcm4TlvDq8ikWAM
